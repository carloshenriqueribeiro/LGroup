
<div class="navbar navbar-inverse navbar-fixed-top">
    <section class="container">
        <header class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Gerenciamento de cursos", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </header>
        <section class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>
                    <div class="dropdown-toggle" data-toggle="dropdown"
                         style="padding-bottom:15px; margin: 0 15px; padding-top: 15px">
                        <a href="#">Home</a>
                    </div>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Página principal", "Index", "Home", new { area = "Administrativo" }, null)</li>
                        <!--Precisamos dizer para o helper ActionLink qual é a area que ele deve ir,
                            Caso não informarmos ele irá para a home que não tem area (home principal)-->
                    </ul>
                </li>
                <li>
                    <div class="dropdown-toggle" data-toggle="dropdown"
                         style="padding-bottom:15px; margin: 0 15px; padding-top: 15px">
                        <a href="#">Financeiro</a>
                    </div>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Home - Financeiro", 
                                    "Index", 
                                    "Financeiro",
                                         new { area = "Admnistrativo" }, 
                                    null)
                        </li>
                    </ul>
                </li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                @if (HttpContext.Current.User.Identity.IsAuthenticated)
                {
                    <li>
                        <a href="#">Olá @HttpContext.Current.User.Identity.Name</a>
                    </li>
                    <li>
                        @Html.ActionLink("Sair", "Logoff", "Login")
                    </li>
                }
            </ul>

        </section>
    </section>
</div>