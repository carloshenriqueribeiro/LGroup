
@*O modelo em uma view sempre começa com @model (mínusculo) *@

@model Domain.GerenciamentoCursosLGroup.Entities.CategoriaEntity
@{
    ViewBag.Title = "Create";
}

<h2>Formulario de cadastro de Categoria</h2>

<!--Existe um novo helper-->
<!--que é o Html.BeginForm-->
<!--Quando não definimos nada, já é implicito que será enviado para a mesta tela
    com o metodo POST -->
@using(Html.BeginForm()){

    <fieldset>
        <legend>Cadastro</legend>
        <div class="form-group">
            <div class="col-xs-2">
                <!--Quando colocamos um html.helpeFor significa que é referente ao modelo -->
                @Html.LabelFor(x => x.Nome, new { @class="control-label"})
            </div>
            <div class="col-xs-10">
                <!--Representa um textbox-->
                @Html.EditorFor(x => x.Nome, new { htmlAttributes = new { @class = "form-control" } })
                <!--Representa a validação vinda do dataAnnotation da entidade-->
                @Html.ValidationMessageFor(x => x.Nome, "", new { @class="text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-offset-2 col-xs-10">
                <button class="btn btn-primary"
                        type="submit">
                    Adicionar
                </button>
            </div>
        </div>

    </fieldset>
}

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

